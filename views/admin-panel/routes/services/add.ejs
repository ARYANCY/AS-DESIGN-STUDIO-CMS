<link rel="stylesheet" href="/css/admin/form.css">
<section id="add-service">
  <h2>Add Service</h2>
  <form action="/admin/services" method="POST" enctype="multipart/form-data">
    <label for="title">Title:</label>
    <input type="text" name="title" required />

    <label for="description">Description:</label>
    <textarea name="description" rows="4" required></textarea>

    <label for="pricing">Pricing:</label>
    <input type="text" name="pricing" required />

    <label for="serviceImage">Upload Image:</label>
    <input type="file" name="serviceImage" accept="image/*" required />

    <button type="submit">Add Service</button>
  </form>
</section>
