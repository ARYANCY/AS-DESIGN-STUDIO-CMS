<link rel="stylesheet" href="/css/admin/form.css">
<section id="EditHero">
  <h2>Edit Hero</h2>
  <form action="/admin/hero/<%= hero._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
    <input type="text" name="businessName" value="<%= hero.businessName %>" required />
    <input type="text" name="tagLine" value="<%= hero.tagLine %>" required />
    <input type="text" name="shortIntro" value="<%= hero.shortIntro %>" required />
    
    <input type="file" name="image" />
    <button type="submit">Update</button>
  </form>
</section>
