<style>
  :root {
    --bg1: #d9cfc4;
    --bg2: #f4f0e7;
    --bg3: #e7dfd5;
    --bg4: #b4a997;
    --bg5: #f8f5f1;

    --headtext1: #4a463b;
    --headtext2: #5b5142;
    --headtext3: #8c9a7b;

    --bodytext1: #7a7365;
    --bodytext2: #9a8f80;
    --bodytext3: #e8e2d8;
    --bodytext4: #f2ede6;

    --accent1: #6d7458;
    --accent2: #8c9a7b;

    --button1-bg: #6d7458;
    --button1-text: #ffffff;
    --button1-hover: #5e664b;

    --border-color: #bdbb9a;
    --box-shadow: rgba(26, 26, 18, 0.1);

    --font-heading: 'Playfair Display', serif;
    --font-body: 'Poppins', sans-serif;
    --font-accent: 'Libre Baskerville', serif;
  }

  #Project {
    padding: 4rem 2rem;
    background: var(--bg3);
    font-family: var(--font-body);
    text-align: center;
  }

  .section-tag {
    font-size: 1.1rem;
    color: var(--headtext3);
    font-family: var(--font-accent);
    margin-bottom: 0.5rem;
  }

  .project-heading {
    font-size: 2.8rem;
    color: var(--headtext2);
    font-family: var(--font-heading);
    margin-bottom: 3rem;
  }

  .project-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .project-card {
    background: var(--bg5);
    border-radius: 1rem;
    box-shadow: 0 6px 14px var(--box-shadow);
    padding: 1.5rem;
    transition: transform 0.25s ease, box-shadow 0.25s ease;
    text-align: left;
  }

  .project-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 10px 24px var(--box-shadow);
  }

  .image-wrapper {
    width: 100%;
    overflow: hidden;
    border-radius: 0.75rem;
    margin-bottom: 1rem;
  }

  .image-wrapper img {
    width: 100%;
    height: 220px;
    object-fit: cover;
    border-radius: 0.75rem;
    transition: transform 0.3s ease;
  }

  .project-card:hover img {
    transform: scale(1.03);
  }

  .project-title {
    font-size: 1.6rem;
    font-family: var(--font-heading);
    color: var(--headtext1);
    margin-bottom: 0.5rem;
  }

  .project-description {
    color: var(--bodytext1);
    font-size: 1.05rem;
    margin-bottom: 1rem;
  }

  .read-more {
    display: inline-block;
    font-size: 0.95rem;
    color: var(--button1-bg);
    font-weight: 600;
    text-decoration: none;
    margin-top: 0.5rem;
    transition: color 0.3s ease;
  }

  .read-more:hover {
    color: var(--button1-hover);
  }
  #Project button {
  background: var(--button1-bg);
  color: var(--button1-text);
  border: none;
  padding: 0.75rem 1.5rem;
  margin: 1rem 0.5rem 0;
  border-radius: 0.5rem;
  font-size: 1rem;
  font-weight: 600;
  cursor: pointer;
  transition: background 0.3s ease;
}

#Project button:hover {
  background: var(--button1-hover);
}

#Project button a {
  color: var(--button1-text);
  text-decoration: none;
}

  @media (max-width: 768px) {
    .project-heading {
      font-size: 2.2rem;
    }

    .project-description {
      font-size: 1rem;
    }

    .project-title {
      font-size: 1.4rem;
    }
  }

  @media (max-width: 480px) {
    .project-heading {
      font-size: 1.8rem;
    }

    .project-title {
      font-size: 1.2rem;
    }

    .project-description {
      font-size: 0.95rem;
    }

    .read-more {
      font-size: 0.9rem;
    }

    .image-wrapper img {
      height: 180px;
    }
  }
</style>
<section id="Project" class="Project">
  <p class="section-tag">Here is what I do</p>
  <h2 class="project-heading">Projects</h2>

  <% if (projectData) { %>
    <div class="project-card">
      <div class="image-wrapper">
        <img src="<%= projectData.image.url %>" alt="Project Image">
      </div>
      <h3 class="project-title"><%= projectData.title || 'Project Title' %></h3>
      <p class="project-description"><%= projectData.description %></p>
    </div>
  <% } %>
  <button><a href="/projects" class="read-more">PROJECTS</a></button>
  <button><a href="/" class="read-more">HOME</a></button>
</section>

